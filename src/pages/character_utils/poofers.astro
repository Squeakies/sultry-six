---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import FormattedDate from '../../components/FormattedDate.astro';

import PoofersResult from '../../components/PoofersResult.astro';

---

<!doctype html>
<script>
import {initializePoofers} from './poofers.ts';

initializePoofers();

</script>



<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
		<style is:global>
		  .roll-result {
			background-color: gray;
			display: inline-block;
			width:100%;
			border-radius:6px;
			margin-bottom: 1em;
		  }

		  .roll-result .damage {
			padding: .5em;
		  }

		  .roll-result .damage-result {
			display: inline-block;
			float:right;
		  }

		  .roll-result span {
			padding: 2px 6px 2px 6px;
			border-radius: 8px;
		  }

		  .roll-result .damage-result .dice-result {
			background-color: #a6a6a6;
			margin-left: .5em;
		  }

		  .roll-result .damage-result .damage-total {
			margin-left: 2em;
			background-color: #cccccc;
		  }
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class = "content"> Did this work? </div>

			<div id="rollem">
  <div id="inputs">
    Times : <input type="text" class="times" /><br>
    Reckless : <input type="checkbox" class="adv" /><br>
    <button class="roll">
      ROLL DAMAGE
    </button>
  </div>
  <br><br>
  <div id="rolls-container"></div>
  <div id="results">
  </div>
</div>

		</main>
		<Footer />
	</body>
</html>
